{% extends 'base.html.twig' %}

{% block title %} Product {% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="my-4">Product</h2>
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container-show p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{asset ('images/tisha.png')}}" width="100" height="100">
                        </div>
                        <div class="col">
                            <h1 class="q-title-show">{{ product.type }} {{ product.price }}</h1>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline">{{ product.description }}</p>
                                <p class="pt-4"><strong>{{ product.game.name }}</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
