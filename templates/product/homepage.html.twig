{% extends 'base.html.twig' %}

{% block body %}
</div>
<div class="jumbotron-img jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">The list of products!</h1>
    </div>
</div>
<div class="container">
    {#<div>
        <form method="get" action="{{ path('show_coaches') }}">
            <input type="search" name="term" value="{{ term }}"/>
        </form>
    </div>#}
    <div class="row">

        {% for product in products %}
            <div class="col-12 mt-3">
                <div class="q-container p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{ asset ('images/magic-photo.png') }}" width="100" height="100">
                        </div>
                        <div class="col">
                           <a class="q-title" href="{{ path('show_product', {id: product.id}) }}"><h2>{{ product.type }} - {{ product.price }}$</h2></a>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline">{{ product.description }}</p>
                                <p class="pt-4"><strong>{{ product.game }}</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
                {#<a class="answer-link" href="{{ path('product_show', { slug: coach.slug }) }}" style="color: #fff;">
                    <p class="q-display-response text-center p-3">
                        <i class="fa fa-magic magic-wand"></i> 15 comments
                    </p>
                </a>#}
            </div>
        {% endfor %}
{% endblock %}