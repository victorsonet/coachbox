{% extends 'base.html.twig' %}

{% block title %} Genres {% endblock %}

{% block body %}
    {% for genre in pagination %}
            <div class="col-12 mt-3">
                <div class="q-container p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{ asset ('images/magic-photo.png') }}" width="100" height="100">
                        </div>
                        <div class="col">
                           <a class="q-title" href="{{ path ('genre_show', {slug: genre.slug}) }}"><h2>{{ genre.name }}</h2></a>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline">Top3</p>
                            </div>
                        </div>
                    </div>
                </div>
                {#<a class="answer-link" href="{{ path('product_show', { slug: coach.slug }) }}" style="color: #fff;">
                    <p class="q-display-response text-center p-3">
                        <i class="fa fa-magic magic-wand"></i> 15 comments
                    </p>
                </a>#}
    {% else %}
    <h1> We couldn't find a genre! </h1>
    {% endfor %}
{% endblock %}
