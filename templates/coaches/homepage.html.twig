{% extends 'base.html.twig' %}


{% block body %}
</div>
<div class="jumbotron-img jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Find your coach</h1>
        <p class="lead">Even those who you didnt think were available!</p>
    </div>
</div>
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <button class="btn btn-question">Get a coach!</button>
            </div>
            <div>
                <a class="btn btn-dark" href="{{ path('coach_reg') }}">Create a coach!</a>
            </div>
        </div>
        <form method="get" action="{{ path('show_coaches') }}">
            <input type="search" name="term" value="{{ term }}" placeholder="Search"/>
        </form>
    </div>
    <div class="row row-cols-1 row-cols-md-3">

        {% for coach in pagination %}
            <div class="col mb-4">
                <div class="card" style="width: 18rem;">
                <img src="{{ asset ('images/magic-photo.png') }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title text-uppercase">{{ coach.firstName }} {{ coach.lastName }}
                    {% if coach.reviews|length %}
                    <h5>{{ (coach.reviews|map(r => r.stars)|reduce((carry, v) => carry + v) / coach.reviews|length) | round(1, 'floor')}}</h5>
                    {% else %}
                    <h5>No reviews</h5>
                    {% endif %}
                    </h5>
                    <p class="card-text">{{ coach.achievements }}</p>
                    <p> Games: 
                    {% for game in coach.games %}
                    <strong> {{ game.name }} </strong>
                    {% else %}
                    None
                    {% endfor %}
                    </p>
                    <a href="{{ path('show_coach', { slug: coach.slug }) }}" class="btn btn-block btn-primary">View</a>
                </div>
                </div>
            </div>
        {% endfor %}
    </div>
        {{ knp_pagination_render(pagination) }}
</div>
{% endblock %}

